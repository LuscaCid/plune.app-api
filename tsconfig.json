{
  "compilerOptions": {
    "emitDecoratorMetadata" : true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".", // base do projeto
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "infra",
    "domain",
    "application",
    "@types"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}